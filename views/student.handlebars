<h3>{{student.first_name}} {{student.last_name}}</h3>

<div class="row">
<div class="col-6">
<h4>Equipment Checked Out:</h4>
<ul class="list-group list-group-flush">
{{#each student.equipment as |equip|}}
            <li class="list-group-item d-flex justify-content-between align-items-center"><a
                href="/equipment/{{equip.id}}"
                class="list-group-item list-group-item-action me-2"
              >{{equip.id}}: {{equip.asset_name}}</a><button data-id="{{equip.id}}" class="btn btn-danger checkin-btn">Check in</button></li>
{{/each}}
</ul>
</div>
<div class="col-6">
    <h4>New Check Out</h4>
    <label for="inputCheckout" class="form-label">Available Equipment List:</label>
    <select name="inputCheckout" id="inputCheckout" class="form-select mb-2">
        <option selected>Choose equipment</option>
        {{#each equipments as |equip|}}
        <option value="{{equip.id}}">{{equip.id}}: {{equip.asset_name}}</option>
        {{/each}}
    </select>
    <button data-id="{{student.id}}" id="checkoutBtn" class="btn btn-primary">Check Out</button>
</div>
</div>

{{> edit-student}}
<button data-id="{{student.id}}" id="deleteBtn" class="btn btn-primary">Delete Student</button>
<script src="/js/delete-student.js"></script>
<script src="/js/checkout.js"></script>
<script src="/js/checkin.js"></script>